template(name='nav')
	nav.navbar.navbar-material-light-blue-300
		div.container-fluid.nav-div
			div.navbar-header.header
				div.col-xs-6

					h4
						img(src='/assets/img/icon3.png')#icon
						span.brand click n' clean
				div.col-xs-6
					if currentUser
						span.badge.pull-right#name #{user}
					else
						//i(data-toggle='modal' data-target='#sign-in-with').fa.fa-user.nav-user.pull-right
						i(class='fa-#{person}').fa.nav-user.pull-right#person-x
						span.fa-stack.pull-right.accounts#f
							i.fa.fa-circle.fa-stack-2x#facebook-background
							i.fa.fa-facebook.fa-stack-1x.fa-inverse#facebook
						span.fa-stack.pull-right.accounts#g
							i.fa.fa-circle.fa-stack-2x#google-background
							i.fa.fa-google.fa-stack-1x.fa-inverse#google
						
						