template(name='adminTools')



	div.container-fluid
		h6 Admin Tools
	div.container-fluid.text-center
			ul.nav.nav-tabs.nav-justified.sub-title.grey-background.text-center
				li
					a(href='#prices' data-toggle='tab')#prices-li P
				li
					a(href='#new' data-toggle='tab') NO
				li
					a(href='#working' data-toggle='tab') WO
				li
					a(href='#completed' data-toggle='tab') CO
	div.tab-content
		div.tab-pane.fade#prices
			div.container-fluid
				div.panel.panel-material-light-blue-400.set-price
					div.panel-heading
						h3.panel-title Set Price
					div.panel-body
						div.form-group
							label.control-label Bedroom
							input(type='number' placeholder='$ 20').form-control#bedroom-price-input
						div.form-group
							label.control-label Bathroom
							input(type='number' placeholder='$ 20').form-control#bathroom-price-input
						div.form-group
							label.control-label Livingroom
							input(type='number' placeholder='$ 20').form-control#livingroom-price-input
						div.form-group
							label.control-label Kitchen
							input(type='number' placeholder='$ 20').form-control#kitchen-price-input
						div.form-group
							label.control-label Basement
							input(type='number' placeholder='$ 20').form-control#basement-price-input
						div.form-group
							label.control-label Garage
							input(type='number' placeholder='$ 20').form-control#garage-price-input
						div.form-group
							label.control-label Yard
							input(type='number' placeholder='$ 20').form-control#yard-price-input
						div.container-fluid.text-center
							a.btn.btn-material-light-blue-400#save-price save
		
		div.tab-pane.fade#new
			div.container-fluid
				div.panel.panel-material-light-blue-200.set-price
					div.panel-heading.admin-panels
						h3.panel-title#panel-titles New Orders : &nbsp; #{newOrdersCount}
					div.panel-body
						div.list-group
							
							table.bordered
								thead
									tr
										th
											p
												span Name
										th
											p
												span Date
								tbody
									each newOrders
										tr
											td
												p
													span
														strong #{name}
											td
												p
													span
														strong #{date}
											td
												a.btn.btn-small.btn-material-light-blue-200
													span.fa.fa-check
							

		div.tab-pane.fade#working
			div.container-fluid
				div.panel.panel-material-light-blue-400.set-price
					div.panel-heading
						h3.panel-title Working Orders : &nbsp; #{workingOrdersCount}
					div.panel-body
						div.list-group
							each workingOrders
								div.list-group-item
									a.btn.btn-fab.mdi-action-done.btn-material-deep-orange-A700#add-to-completed
									div.row-content
										div.least-content #{month} / #{date} &nbsp; #{time}
										span.list-group-item-heading
											i.mdi-action-perm-identity
												span #{name}
											i.mdi-communication-call 
												span #{phone}
											i.mdi-action-room
												span #{address} &nbsp; #{city} &nbsp; #{state} &nbsp; #{zip}
										p Total: $ &nbsp;
											span #{total}
										p.float Payment Type: &nbsp;
											span #{paymentType}
								hr

		div.tab-pane.fade#completed
			div.container-fluid
				div.panel.panel-material-light-blue-400.set-price
					div.panel-heading
						h3.panel-title Completed Orders : &nbsp; #{completedOrdersCount}
					div.panel-body
						div.list-group
							each completedOrders
								div.list-group-item
									a.btn.btn-fab.mdi-action-done-all.btn-material-green-A700#remove-completed
									div.row-content
										div.least-content #{month} / #{date} &nbsp; #{time}
										span.list-group-item-heading
											i.mdi-action-perm-identity
												span #{name}
											i.mdi-communication-call 
												span #{phone}
											i.mdi-action-room
												span #{address} &nbsp; #{city} &nbsp; #{state} &nbsp; #{zip}
										p Total: $ &nbsp;
											span #{total}
										p.float Payment Type: &nbsp;
											span #{paymentType}
								hr

